@model ContosoUniversity.Features.Department.Delete.QueryResponse

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="AdministratorFullName"></label>
        </dt>
        <dd>
            @Model.AdministratorFullName
        </dd>
        <dt>
            <label asp-for="Name"></label>
        </dt>
        <dd>
            @Model.Name
        </dd>

        <dt>
            <label asp-for="Budget"></label>
        </dt>

        <dd>
            @Model.Budget.ToString("C")
        </dd>

        <dt>
            <label asp-for="StartDate"></label>
        </dt>
        <dd>
            @Model.StartDate?.ToString("d")
        </dd>

    </dl>

    <form asp-controller="Department" asp-action="Delete" method="post" role="form">
        <input type="hidden" asp-for="Id"/>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>

</div>
