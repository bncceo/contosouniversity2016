@model ContosoUniversity.Features.Student.Details.QueryResponse

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="LastName"></label>
        </dt>

        <dd>
            @Model.LastName
        </dd>

        <dt>
            <label asp-for="FirstName"></label>
        </dt>

        <dd>
            @Model.FirstName
        </dd>

        <dt>
            <label asp-for="EnrollmentDate"></label>
        </dt>

        <dd>
            @Model.EnrollmentDate.ToString("d")
        </dd>
        <dt>
            <label asp-for="Enrollments"></label>
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>
                            @item.CourseTitle
                        </td>
                        <td>
                            @item.Grade
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
