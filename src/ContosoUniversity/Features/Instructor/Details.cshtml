@model ContosoUniversity.Features.Instructor.Details.QueryResponse

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="OfficeAssignmentLocation"></label>
        </dt>

        <dd>
            @Model.OfficeAssignmentLocation
        </dd>

        <dt>
            <label asp-for="LastName"></label>
        </dt>

        <dd>
            @Model.LastName
        </dd>

        <dt>
            <label asp-for="FirstName"></label>
        </dt>

        <dd>
            @Model.FirstName
        </dd>

        <dt>
            <label asp-for="HireDate"></label>
        </dt>

        <dd>
            @Model.HireDate.ToString("d")
        </dd>

    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
