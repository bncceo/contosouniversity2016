@model ContosoUniversity.Features.Instructor.Details.QueryResponse

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="OfficeAssignmentLocation"></label>
        </dt>

        <dd>
            @Model.OfficeAssignmentLocation
        </dd>

        <dt>
            <label asp-for="LastName"></label>
        </dt>

        <dd>
            @Model.LastName
        </dd>

        <dt>
            <label asp-for="FirstName"></label>
        </dt>

        <dd>
            @Model.FirstName
        </dd>

        <dt>
            <label asp-for="HireDate"></label>
        </dt>

        <dd>
            @Model.HireDate.ToString("d")
        </dd>

    </dl>

    <form asp-controller="Instructor" asp-action="Delete" method="post" role="form">
        <input type="hidden" asp-for="Id" />

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>

</div>
