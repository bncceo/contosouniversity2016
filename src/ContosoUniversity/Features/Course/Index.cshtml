@model ContosoUniversity.Features.Course.Index.Result
@{
    ViewData["Title"] = "Course Index";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <tr>
        <th>
            Number
        </th>
        <th>
            Title
        </th>
        <th>
            Credits
        </th>
        <th>
            Department
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Courses)
    {
        <tr>
            <td>
                @item.Number
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Credits
            </td>
            <td>
                @item.DepartmentName
            </td>
            <td>
                <a href="">Edit</a>
                <a href="">Details</a>
                <a href="">Delete</a>
            </td>
        </tr>
    }

</table>